		"meteor-babel": "^7.10.7",
		"meteor-promise": "0.8.7",
		"mock-http": "^1.1.0",
		"open-cli": "^6.0.1",
		"prettier": "^2.2.1",
		"simple-git": "^2.37.0",
		"sinon": "^9.2.4",
		"standard-version": "^9.1.1",
		"ts-jest": "^26.5.4",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"tslint-plugin-prettier": "^2.1.0",
		"typescript": "~4.1.5",
		"typescript-tslint-plugin": "^0.5.5",
		"xmldom": "^0.6.0",
		"yargs": "^16.2.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx}": [
			"npm run lintfix --"
		]
	},
	"meteor": {
		"mainModule": {
			"client": "client/main.tsx",
			"server": "server/main.ts"
		}
	},
	"standard-version": {
		"scripts": {
			"postbump": "npm run libs:syncVersionsAndChangelogs"
		}
	}
